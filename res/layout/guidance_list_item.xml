<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:paddingBottom="2dp"
	android:paddingLeft="6dp" android:paddingRight="6dp">
	<TextView android:id="@+id/BoardName" android:text="TextView01"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:textColor="@color/blue_text" />
	<TextView android:id="@+id/AuthorID" android:text="TextView02"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:textColor="@color/blue_text" android:gravity="right" />
	<TextView android:id="@+id/SubjectTitle" android:text="TextView03"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_below="@+id/BoardName" android:textColor="@color/status_text"
		android:textSize="19dp" />
</RelativeLayout>